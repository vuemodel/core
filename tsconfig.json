{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "types": [
      "vitest",
      "@types/web-bluetooth"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "packages",
    "packages/.vitepress/components/*.vue",
    "packages/.vitepress/*.ts",
    "meta",
    "vitest.config.ts"
  ],
  "exclude": [
    "unocss.config.ts",
    "node_modules",
    "**/*.md",
    "**/dist",
    "packages/.test",
    "packages/_docs"
  ]
}